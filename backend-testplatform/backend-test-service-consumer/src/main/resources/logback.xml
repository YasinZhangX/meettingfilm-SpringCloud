<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
          <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level ${PID:- } --- [%white(%15.15thread)] %cyan(%-40.40logger{40}) : %msg%n</pattern>
          <charset>UTF-8</charset>
      </encoder>
  </appender>

  <root level="info">
      <appender-ref ref="STDOUT" />
  </root>
</configuration>
